@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h4 class="text-center">Edit this Treat: @Html.DisplayFor(model => model.TreatName)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)
      <div class="form-group">
        @Html.LabelFor(model => model.TreatName)
        @Html.EditorFor(model => model.TreatName, new { htmlAttributes = new {@class="form-control"}})
      </div>
        <input type="submit" value="Save" class="btn btn-default"/>
    }

  </div>
