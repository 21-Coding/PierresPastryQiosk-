@{
  Layout = "_Layout";
}
@using Pierre.Models;
@using System.Security.Claims
@model IEnumerable<Pierre.Models.Treat>



<div class="row">
    <div class="section-header">
      <img src="~/img/treats.jpg" alt="">
    </div>
  <div class="col-md-6 offset-md-3">
    <h1>Treats for @User.Identity.Name</h1>

    @if (@Model.Any())
    {
      <h3 class="text-center">No treats have been added yet!</h3>
    }
    else
    {
      <div class="list-group" id="list-tab" role="tablist">
        @foreach (Treat treat in Model)
        {
          <div class="list-group-item list-group-item-action">
            - @Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId }) 
              
          </div>
        }
      </div>
    }
    <br>
    <br>
 
