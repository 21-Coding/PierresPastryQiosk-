@{
  Layout = "_Layout";
}
@using Pierre.Models;
@model List<Pierre.Models.Flavor>;
<div class="row">
    
  <div class="col-md-6 offset-md-3">

    <h1 class="text-center">Flavors</h1>

    @if (@Model.Count == 0)
    {
      <h3 class="text-center">No flavors have been added yet!</h3>
    }
    else
    {
      <div class="list-group" id="list-tab" role="tablist">
        @foreach (Flavor flavor in Model)
        {
          <div class="list-group-item list-group-item-action">
             @Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId }) 
              
          </div>
        }
      </div>
    }
    
  </div>
</div>